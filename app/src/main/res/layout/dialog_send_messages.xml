<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding10"
    app:cardElevation="@dimen/padding10"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding20"
            android:paddingTop="@dimen/padding10"
            android:paddingRight="@dimen/padding20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginBottom="@dimen/padding10"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/titleSendMessages"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_twenty_two"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/padding10"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/lblMessageSetting"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/font_fourteen"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rdoGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rdoAllParticipants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start|center_vertical"
                        android:padding="@dimen/padding12"
                        android:text="@string/lblAllParticipants"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/font_eighteen" />

                    <RadioButton
                        android:id="@+id/rdoOnlyAdmins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start|center_vertical"
                        android:padding="@dimen/padding12"
                        android:text="@string/lblOnlyAdmin"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/font_eighteen" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                style="@style/DialogCancelButton"
                android:text="@string/strCancel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDone"
                style="@style/DialogDoneButton"
                android:text="@string/strDone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>